<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:padding="@dimen/dp_10_classroom"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dp_15_classroom"
        android:text="收货地址"
        android:gravity="center"
        android:textColor="@color/textColorClassRoom"
        android:textStyle="bold"
        android:id="@+id/tvTitle"
        android:textSize="@dimen/sp_16_classroom"
        android:paddingBottom="@dimen/dp_15_classroom"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/LineClassRoom"/>
    <TextView
        android:layout_width="match_parent"
        android:id="@+id/tvDes"
        android:paddingTop="@dimen/dp_15_classroom"
        android:lineSpacingExtra="@dimen/dp_5_classroom"
        android:paddingBottom="@dimen/dp_15_classroom"
        android:text="请准确的填写收货信息"
        android:textColor="@color/themeClassRoom"
        android:layout_height="wrap_content"/>

    <EditText
        android:layout_width="match_parent"
        android:hint="姓名"
        android:id="@+id/etName"

        android:padding="@dimen/dp_15_classroom"
        android:textSize="@dimen/sp_14_classroom"
        android:layout_height="wrap_content"/>

    <EditText
        android:layout_width="match_parent"
        android:hint="手机号"
        android:inputType="number"
        android:id="@+id/etNumber"
        android:padding="@dimen/dp_15_classroom"
        android:textSize="@dimen/sp_14_classroom"
        android:layout_height="wrap_content"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <EditText
            android:layout_width="match_parent"
            android:hint="收货地址"
            android:id="@+id/etAddress"
            android:padding="@dimen/dp_15_classroom"
            android:textSize="@dimen/sp_14_classroom"
            android:layout_toLeftOf="@+id/ivLocation"
            android:layout_marginRight="@dimen/dp_5_classroom"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:padding="@dimen/dp_5_classroom"
            android:id="@+id/ivLocation"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_location_shoppingcenter"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        >
        <Button
            android:id="@+id/btCancel"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="取消"
            android:background="@color/backgroundClassRoom"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/btOk"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="确定"
            android:background="@color/themeClassRoom"
            android:textColor="@android:color/white"
            android:layout_marginLeft="@dimen/dp_10_classroom"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>