<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.xinwang.shoppingcenter">
    <!--网络状态-->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!--<uses-permission android:name="android.permission.CALL_PHONE" />-->
    <application android:hardwareAccelerated="true">
        <activity android:name=".ui.ShoppingHomeActivity"
            android:windowSoftInputMode="adjustResize|adjustUnspecified|stateHidden"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:screenOrientation="portrait"
            android:theme="@style/AppThemeClassRoom">
        </activity>
        <activity android:name=".ui.ShoppingSearchActivity"
            android:windowSoftInputMode="adjustResize|adjustUnspecified|stateHidden"
