            android:windowSoftInputMode="adjustResize|adjustUnspecified|stateHidden"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:screenOrientation="portrait"
            android:exported="true"
            android:theme="@style/AppThemeClassRoom">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.BROWSABLE"/>
                <category android:name="android.intent.category.DEFAULT" />
                <data
                    android:scheme="classroom"
                    android:host="${applicationId}.splist" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.ShoppingCenterActivity"
            android:windowSoftInputMode="adjustResize|adjustUnspecified"
            android:configChanges="orientation|screenSize|keyboardHidden"
