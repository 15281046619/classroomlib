<?xml version="1.0" encoding="utf-8"?>
<LinearLayout    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_gravity="right"
    android:layout_width="280dp"
    android:background="@color/BGClassRoom"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/tvTitle"
        android:text="筛选"
        android:paddingLeft="@dimen/dp_15_classroom"
        android:paddingRight="@dimen/dp_15_classroom"
        android:paddingBottom="@dimen/dp_10_classroom"
        android:paddingTop="@dimen/dp_10_classroom"
        android:layout_width="wrap_content"
        android:textColor="@color/GrayClassRoom"
        android:layout_height="wrap_content"/>
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@android:color/white"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/llRoot"
            android:paddingTop="@dimen/dp_5_classroom"
            android:orientation="vertical">

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:paddingRight="@dimen/dp_15_classroom"
        android:paddingBottom="@dimen/dp_15_classroom"
        android:paddingTop="@dimen/dp_15_classroom"
        android:background="@android:color/white"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:text="重置"
            android:id="@+id/tvCancel"
            android:layout_toLeftOf="@+id/tvOk"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:gravity="center"
            android:layout_height="35dp"
            android:textColor="@android:color/white"
            android:background="@drawable/shape_dialog_category_cancel_bg_shoppingcenter"
            />
        <TextView
            android:id="@+id/tvOk"
            android:layout_width="wrap_content"
            android:text="确定"
            android:gravity="center"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:background="@drawable/shape_dialog_category_ok_bg_shoppingcenter"
            android:textColor="@android:color/white"
            android:layout_alignParentRight="true"
            android:layout_height="35dp"/>
    </RelativeLayout>
</LinearLayout>