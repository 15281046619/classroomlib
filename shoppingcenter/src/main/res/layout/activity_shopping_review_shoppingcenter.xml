<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/BGClassRoom"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.xinwang.bgqbaselib.view.CustomToolbar
        android:id="@+id/toolbar"
        style="@style/ToolbarStyleClassRoom"
        android:focusableInTouchMode="true"
        android:focusable="true"
        android:text="发表评论"
        android:layout_alignParentTop="true"
        app:contentInsetStartWithNavigation="0dp"
        >
        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:id="@+id/ivSubmit"
            android:layout_marginEnd="10dp"
            android:layout_gravity="right|center_vertical"
            android:src="@mipmap/ic_submit_shpppingcenter"/>
    </com.xinwang.bgqbaselib.view.CustomToolbar>
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:id="@+id/scrollview"
        android:layout_weight="1">



            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_marginBottom="@dimen/dp_10_classroom"
                app:cardCornerRadius="@dimen/dp_5_classroom"
                app:cardBackgroundColor="@android:color/white"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardUseCompatPadding="true"
                app:cardMaxElevation="0dp"
                app:elevation="0dp"
                android:layout_margin="15dp"
                android:clipChildren="false"
                android:clipToPadding="false"
                app:cardPreventCornerOverlap="false"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp"
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dp_10_classroom">

                        <android.support.v7.widget.CardView
                            android:layout_width="40dp"
                            android:id="@+id/cdCove"
                            android:layout_marginTop="@dimen/dp_5_classroom"
                            android:layout_marginBottom="@dimen/dp_5_classroom"
                            android:layout_marginRight="@dimen/dp_10_classroom"
                            app:cardCornerRadius="@dimen/dp_5_classroom"
                            app:elevation="0dp"
                            app:cardMaxElevation="0dp"
                            android:layout_height="40dp">
                            <ImageView
                                android:id="@+id/icCove"
                                android:layout_width="match_parent"
                                android:scaleType="centerCrop"
                                android:layout_height="match_parent"/>
                        </android.support.v7.widget.CardView>
                        <TextView
                            android:layout_toRightOf="@+id/cdCove"
                            android:layout_width="match_parent"
                            android:id="@+id/tvTitle"
                            android:layout_marginTop="3dp"
                            android:includeFontPadding="false"
                            android:layout_height="wrap_content"/>
                    </RelativeLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="@dimen/dp_10_classroom"
                        android:paddingLeft="@dimen/dp_10_classroom"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="综合评分"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="6dp"
                            android:src="@drawable/select_review_soce_shoppingcenter"
                            android:id="@+id/ivScore1"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="6dp"
                            android:src="@drawable/select_review_soce_shoppingcenter"
                            android:id="@+id/ivScore2"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="6dp"
                            android:src="@drawable/select_review_soce_shoppingcenter"
                            android:id="@+id/ivScore3"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="6dp"
                            android:src="@drawable/select_review_soce_shoppingcenter"
                            android:id="@+id/ivScore4"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="6dp"

                            android:src="@drawable/select_review_soce_shoppingcenter"
                            android:id="@+id/ivScore5"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:id="@+id/tvScoreDes"

                            android:textColor="@color/GrayClassRoom"/>
                    </LinearLayout>
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="130dp"
                        android:layout_margin="10dp"
                        android:background="@null"
                        android:gravity="top"

                        android:id="@+id/etContent"
                        android:hint="评论该商品可以获得额外惊喜哦~"/>
                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="87dp"
                        android:id="@+id/hScrollview"
                        android:clipChildren="false"
                        android:clipToPadding="false"
                        android:scrollbars="none"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:id="@+id/llHead"
                                android:clipChildren="false"
                                android:clipToPadding="false"
                                android:orientation="horizontal"/>
                            <TextView
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:paddingTop="20dp"
                                android:text="买家秀"
                                android:id="@+id/tvAdd"
                                android:layout_gravity="bottom"
                                android:textColor="@color/textColorClassRoom"
                                android:gravity="center_horizontal"
                                android:drawableTop="@drawable/ic_baseline_add_a_photo_24_shoppingcenter"
                                android:background="@drawable/shape_add_phone_bg_shoppingcenter"/>
                        </LinearLayout>
                    </HorizontalScrollView>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_height="wrap_content">
                        <CheckBox
                            android:layout_width="wrap_content"
                            android:checked="true"
                            android:id="@+id/cbTrue"
                            android:text="公开"
                            android:gravity="center"
                            android:paddingLeft="5dp"
                            android:textSize="13sp"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:textColor="@color/textColorClassRoom"
                            android:button="@drawable/select_check_button_shoppingcenter"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="13sp"
                            android:textColor="@color/GrayClassRoom"
                            android:layout_centerVertical="true"
                            android:text="公开头像昵称，大家可以看到我的主页"
                            android:layout_alignParentRight="true"/>
                    </RelativeLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

    </android.support.v4.widget.NestedScrollView>
</LinearLayout>