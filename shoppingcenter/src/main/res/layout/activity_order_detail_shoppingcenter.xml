<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/BGClassRoom"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <com.xinwang.bgqbaselib.view.CustomToolbar
        android:id="@+id/toolbar"
        app:layout_collapseMode="pin"
        android:text="订单详情"
        app:layout_scrollFlags="scroll|enterAlways"
        style="@style/ToolbarStyleClassRoom"
        />
    <include

        layout="@layout/layout_empty_classroom"
        android:layout_height="match_parent"
        android:layout_width="match_parent"/>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/scrollview"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/dp_15_classroom"
            android:orientation="vertical">
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                app:cardCornerRadius="@dimen/dp_5_classroom"
                app:cardBackgroundColor="@android:color/white"
                android:id="@+id/cdAddress"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardUseCompatPadding="true"
                app:cardMaxElevation="0dp"
                app:cardPreventCornerOverlap="false"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:padding="10dp"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="40dp"
                        android:scaleType="fitXY"

                        android:layout_centerVertical="true"
                        android:src="@mipmap/ic_location_shoppingcenter"
                        android:layout_height="40dp"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="60dp"
                        android:layout_marginRight="10dp"
                        android:layout_centerVertical="true">

                        <TextView
                            android:layout_width="wrap_content"
                            android:id="@+id/tvName"
                            android:textStyle="bold"
                            android:maxLength="10"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:text="mss"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:id="@+id/tvPhone"
                            android:layout_alignBottom="@+id/tvName"
                            android:layout_toRightOf="@+id/tvName"
                            android:layout_marginLeft="@dimen/dp_10_classroom"
                            android:textSize="@dimen/sp_13_classroom"
                            android:maxLength="11"
                            android:singleLine="true"
                            android:ellipsize="end"
                            android:textColor="@color/GrayClassRoom"
                            android:minLines="2"
                            android:text="mss"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:textSize="@dimen/sp_13_classroom"
                            android:layout_below="@+id/tvName"
                            android:layout_marginTop="5dp"
                            android:id="@+id/tvAddress"
                            android:minLines="2"
                            android:layout_height="wrap_content"/>
                    </RelativeLayout>


                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                app:cardCornerRadius="@dimen/dp_5_classroom"
                app:cardMaxElevation="0dp"
                app:cardBackgroundColor="@android:color/white"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardUseCompatPadding="true"
                android:layout_marginTop="@dimen/dp_10_classroom"
                app:cardPreventCornerOverlap="false"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:paddingTop="@dimen/dp_10_classroom"
                    android:paddingLeft="@dimen/dp_10_classroom"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tvProductName"
                        android:layout_marginBottom="@dimen/dp_10_classroom"
                        android:text="商品清单"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/LineClassRoom"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:id="@+id/llContent"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"

                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="商品总价"
                            android:textSize="@dimen/sp_14_classroom"
                            android:paddingTop="@dimen/dp_10_classroom"
                            android:paddingBottom="@dimen/dp_10_classroom"
                            android:layout_marginLeft="@dimen/dp_10_classroom"
                            android:gravity="right|center_vertical"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:id="@+id/tvProductPrice"
                            android:gravity="right|center_vertical"
                            android:singleLine="true"
                            android:textColor="@color/themeClassRoom"
                            android:textSize="@dimen/sp_14_classroom"
                            android:padding="@dimen/dp_10_classroom"
                            />
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginLeft="@dimen/dp_10_classroom"
                        android:background="@color/LineClassRoom"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:id="@+id/llExpress"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="配送费用"
                            android:textSize="@dimen/sp_14_classroom"
                            android:paddingTop="@dimen/dp_10_classroom"
                            android:paddingBottom="@dimen/dp_10_classroom"
                            android:layout_marginLeft="@dimen/dp_10_classroom"
                            android:gravity="right|center_vertical"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:id="@+id/tvExpress"
                            android:gravity="right|center_vertical"
                            android:singleLine="true"
                            android:textColor="@color/red"
                            android:textSize="@dimen/sp_14_classroom"
                            android:padding="@dimen/dp_10_classroom"
                            />
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:id="@+id/viewLine"
                        android:layout_marginLeft="@dimen/dp_10_classroom"
                        android:background="@color/LineClassRoom"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"

                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="红包/优惠劵"
                            android:textSize="@dimen/sp_14_classroom"
                            android:paddingTop="@dimen/dp_10_classroom"
                            android:paddingBottom="@dimen/dp_10_classroom"
                            android:layout_marginLeft="@dimen/dp_10_classroom"
                            android:gravity="right|center_vertical"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:id="@+id/tvCoupon"
                            android:gravity="right|center_vertical"
                            android:singleLine="true"
                            android:textColor="@color/themeClassRoom"
                            android:textSize="@dimen/sp_14_classroom"
                            android:padding="@dimen/dp_10_classroom"
                            />
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginLeft="@dimen/dp_10_classroom"
                        android:background="@color/LineClassRoom"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:id="@+id/llAdminPrice"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="减免费用"
                            android:textSize="@dimen/sp_14_classroom"
                            android:paddingTop="@dimen/dp_10_classroom"
                            android:paddingBottom="@dimen/dp_10_classroom"
                            android:layout_marginLeft="@dimen/dp_10_classroom"
                            android:gravity="right|center_vertical"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:id="@+id/tvAdminPrice"
                            android:gravity="right|center_vertical"
                            android:singleLine="true"
                            android:textColor="@color/themeClassRoom"
                            android:textSize="@dimen/sp_14_classroom"
                            android:padding="@dimen/dp_10_classroom"
                            />
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:id="@+id/viewLine1"
                        android:layout_marginLeft="@dimen/dp_10_classroom"
                        android:background="@color/LineClassRoom"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="订单备注"
                            android:textSize="@dimen/sp_14_classroom"
                            android:paddingTop="13dp"
                            android:paddingBottom="13dp"
                            android:layout_marginLeft="@dimen/dp_10_classroom"
                            android:gravity="right"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:id="@+id/etRemarks"
                            android:textColor="@color/GrayClassRoom"
                            android:textSize="@dimen/sp_14_classroom"
                            android:padding="13dp"
                            android:gravity="right"/>
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@android:color/white"
        android:layout_marginTop="@dimen/dp_1_classroom"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/tvPrice"
            android:layout_toLeftOf="@+id/tvBuy"
            android:layout_marginRight="@dimen/dp_15_classroom"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_marginLeft="@dimen/dp_15_classroom"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tvCancel"
            android:layout_width="110dp"
            android:text="取消订单"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_15_classroom"
            android:background="@drawable/shape_count_bg_shoppingcenter"
            android:textColor="@android:color/white"
            android:layout_toLeftOf="@+id/tvPay"
            android:layout_height="35dp"/>
        <TextView
            android:id="@+id/tvPay"
            android:layout_width="110dp"
            android:text="支付"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_15_classroom"
            android:background="@drawable/shape_count_bg_shoppingcenter"
            android:textColor="@android:color/white"
            android:layout_alignParentRight="true"
            android:layout_height="35dp"/>
    </RelativeLayout>
</LinearLayout>
