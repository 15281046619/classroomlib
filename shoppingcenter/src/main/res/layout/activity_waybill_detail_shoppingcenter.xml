<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/BGClassRoom"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <com.xinwang.bgqbaselib.view.CustomToolbar
        android:id="@+id/toolbar"
        app:layout_collapseMode="pin"
        android:text="物流详情"
        app:layout_scrollFlags="scroll|enterAlways"
        style="@style/ToolbarStyleClassRoom"
        />
    <include
        layout="@layout/layout_empty_classroom"
        android:layout_height="match_parent"

        android:layout_width="match_parent"/>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/scrollview"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/dp_15_classroom"
            android:orientation="vertical">
            <android.support.v7.widget.CardView android:layout_width="match_parent"
                android:layout_marginBottom="@dimen/dp_10_classroom"
                app:cardCornerRadius="@dimen/dp_5_classroom"
                app:cardBackgroundColor="@android:color/white"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardUseCompatPadding="true"
                app:cardMaxElevation="0dp"
                app:elevation="0dp"
                app:cardPreventCornerOverlap="false"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp_10_classroom">

                    <android.support.v7.widget.CardView
                        android:layout_width="90dp"
                        android:id="@+id/cdCove"
                        android:layout_toRightOf="@+id/rbCheck"
                        android:layout_below="@+id/tvTime"
                        android:layout_marginTop="@dimen/dp_5_classroom"
                        android:layout_marginBottom="@dimen/dp_5_classroom"
                        android:layout_marginRight="@dimen/dp_10_classroom"
                        app:cardCornerRadius="@dimen/dp_5_classroom"
                        app:elevation="0dp"
                        app:cardMaxElevation="0dp"
                        android:layout_height="90dp">
                        <ImageView
                            android:id="@+id/icCove"
                            android:layout_width="match_parent"
                            android:scaleType="centerCrop"
                            android:layout_height="match_parent"/>
                    </android.support.v7.widget.CardView>
                    <TextView
                        android:layout_toRightOf="@+id/cdCove"
                        android:layout_width="match_parent"
                        android:id="@+id/tvTitle"
                        android:layout_below="@+id/tvTime"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/cdCove"
                        android:id="@+id/tvSku"
                        android:textColor="@color/GrayClassRoom"
                        android:textSize="@dimen/sp_12_classroom"
                        android:background="@color/BGClassRoom"
                        android:padding="@dimen/dp_5_classroom"
                        android:layout_marginTop="@dimen/dp_10_classroom"
                        android:layout_below="@+id/tvTitle"/>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tvPrice"
                        android:textSize="18sp"
                        android:layout_toRightOf="@+id/cdCove"
                        android:layout_marginTop="@dimen/dp_10_classroom"
                        android:textColor="@color/themeClassRoom"
                        android:layout_below="@+id/tvSku"
                        android:gravity="center_vertical"
                        android:maxLines="1"
                        android:text="323"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignBottom="@+id/tvPrice"
                        android:id="@+id/number"/>
                </RelativeLayout>
            </android.support.v7.widget.CardView>
            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"

               >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:id="@+id/llWaybillSum"
                    android:layout_height="wrap_content">

                </LinearLayout>
            </HorizontalScrollView>
            <android.support.v7.widget.CardView android:layout_width="match_parent"
                android:layout_marginBottom="@dimen/dp_10_classroom"
                app:cardCornerRadius="@dimen/dp_5_classroom"
                app:cardBackgroundColor="@android:color/white"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardUseCompatPadding="true"
                app:cardMaxElevation="0dp"
                app:elevation="0dp"
                app:cardPreventCornerOverlap="false"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:paddingBottom="10dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal">
                        <com.xinwang.shoppingcenter.view.CircularImage
                            android:layout_width="20dp"
                            android:id="@+id/ivWaybillSrc"
                            android:layout_height="20dp"
                            android:scaleType="fitXY"
                            android:layout_margin="10dp"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:id="@+id/tvWaybillName"
                            android:textSize="12sp"
                            android:text="圆通快递 772992992"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/tvCopy"
                            android:text="复制"
                            android:textSize="13sp"
                            android:textColor="@color/GrayClassRoom"
                            android:padding="10dp"
                            />
                        <View
                            android:layout_width="1dp"
                            android:layout_height="13dp"

                            android:background="@color/GrayClassRoom"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/tvCall"
                            android:text="打电话"
                            android:textSize="13sp"
                            android:textColor="@color/GrayClassRoom"
                            android:padding="10dp"
                            />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/llRoot"
                        android:orientation="vertical"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</LinearLayout>
