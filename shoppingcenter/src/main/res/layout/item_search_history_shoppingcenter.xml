<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="45dp"
    android:background="@drawable/select_item_bg_classroom"
    android:paddingLeft="@dimen/dp_15_classroom"
    android:id="@+id/rlRoot"
   >
    <TextView
        android:id="@+id/tvContent"
        android:textSize="@dimen/sp_13_classroom"
        android:layout_width="wrap_content"
        android:layout_centerVertical="true"
        android:text="轻摇"
        android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/ivDelete"
        android:layout_width="@dimen/dp_15_classroom"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dp_15_classroom"
        android:src="@drawable/ic_baseline_close_20_shoppingcenter"
        android:layout_height="@dimen/dp_15_classroom"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1_classroom"
        android:layout_alignParentBottom="true"
        android:background="@color/LineClassRoom"/>
</RelativeLayout>