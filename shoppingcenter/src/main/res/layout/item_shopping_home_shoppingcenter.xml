<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app ="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    app:cardCornerRadius="@dimen/dp_10_classroom"
    app:cardBackgroundColor="@android:color/white"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardUseCompatPadding="true"
    app:cardPreventCornerOverlap="false"
    app:cardElevation="2dp"
    app:cardMaxElevation="2dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/llRoot"
        android:orientation="vertical">
        <ImageView
            android:layout_width="match_parent"
            android:id="@+id/ivContent"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:transitionName="goodsIcon"
            android:background="@color/BGPressedClassRoom"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tvContent"
            android:layout_width="wrap_content"
            android:text="这是一个啥子 "
            android:minLines="2"
            android:maxLines="2"
            android:layout_marginLeft="@dimen/dp_10_classroom"
            android:layout_marginRight="@dimen/dp_10_classroom"
            android:layout_marginTop="@dimen/dp_10_classroom"
            android:layout_marginBottom="@dimen/dp_5_classroom"
            android:layout_height="match_parent"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvPrice"
                android:textSize="18sp"
                android:layout_marginLeft="@dimen/dp_10_classroom"
                android:layout_marginBottom="@dimen/dp_10_classroom"
                android:layout_centerVertical="true"
                android:textColor="@color/themeClassRoom"
                android:layout_toRightOf="@+id/ivImg"/>
            <TextView
                android:layout_width="wrap_content"
                android:textSize="@dimen/sp_12_classroom"
                android:id="@+id/tvClick"
                android:layout_marginLeft="@dimen/dp_10_classroom"
                android:layout_marginBottom="@dimen/dp_10_classroom"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content"/>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:id="@+id/rlAdd"
                android:padding="@dimen/dp_10_classroom">
                <TextView
                    android:id="@+id/tvAdd"
                    android:layout_width="@dimen/dp_15_classroom"
                    android:layout_height="@dimen/dp_15_classroom"
                    android:textSize="10sp"
                    android:textColor="@android:color/white"
                    android:text="+"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:background="@drawable/shape_add_product_button_bg_shoppingcenter"
                    />
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>