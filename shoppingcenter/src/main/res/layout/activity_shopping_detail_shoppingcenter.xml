<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/BGClassRoom"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.xinwang.bgqbaselib.view.CustomToolbar
        android:id="@+id/toolbar"
        app:layout_collapseMode="pin"
        android:text="商品详情"
        app:layout_scrollFlags="scroll|enterAlways"
        style="@style/ToolbarStyleClassRoom"
        >
        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:id="@+id/ivShare"
            android:src="@mipmap/ic_fx_classroom"
            android:layout_gravity="right|center_vertical"
            android:layout_marginEnd="10dp"
            />
        <!--     <ImageView
                 android:layout_width="48dp"
                 android:layout_height="48dp"
                 android:paddingLeft="17dp"
                 android:paddingRight="17dp"
                 android:src="@mipmap/ic_fx_classroom"
                 android:layout_gravity="right|center_vertical"
                 />-->
    </com.xinwang.bgqbaselib.view.CustomToolbar>
    <include
        layout="@layout/layout_empty_classroom"/>
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:descendantFocusability="blocksDescendants"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:id="@+id/rlViewPager"
                android:layout_height="wrap_content">
                <android.support.v4.view.ViewPager
                    android:layout_width="match_parent"
                    android:id="@+id/viewPager"
                    android:layout_height="400dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginRight="@dimen/dp_15_classroom"
                    android:layout_marginBottom="@dimen/dp_15_classroom"
                    android:id="@+id/tvSum"
                    android:paddingLeft="@dimen/dp_10_classroom"
                    android:paddingRight="@dimen/dp_10_classroom"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:textColor="@android:color/white"
                    android:background="@drawable/shape_detail_icon_lable_bg_shoppingcenter"
                    android:text="4/6"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_10_classroom"
                android:background="@drawable/shape_shopping_detail_label_bg_shoppingcenter"
                android:padding="@dimen/dp_10_classroom"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvPrice"
                    android:textSize="20sp"

                    android:layout_marginBottom="@dimen/dp_15_classroom"
                    android:textColor="@color/themeClassRoom"
                  />
                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_below="@+id/tvPrice"
                    android:layout_marginBottom="@dimen/dp_15_classroom"
                    android:text="台式机上课"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_below="@+id/tvTitle"
                    android:id="@+id/llContent"/>
          <!--      <TextView
                    android:id="@+id/tvName"
                    android:layout_width="wrap_content"
                    android:layout_below="@+id/tvTitle"
                    android:lineSpacingExtra="@dimen/dp_10_classroom"
                    android:textColor="@color/GrayClassRoom"
                    android:textSize="13sp"
                    android:layout_marginRight="@dimen/dp_15_classroom"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tvValue"
                    android:layout_width="match_parent"
                    android:gravity="right"
                    android:layout_toRightOf="@+id/tvName"
                    android:lineSpacingExtra="@dimen/dp_10_classroom"
                    android:layout_below="@+id/tvTitle"
                    android:textSize="13sp"
                    android:layout_height="wrap_content"/>-->
            </RelativeLayout><!--
            </android.support.v7.widget.CardView>-->

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginBottom="@dimen/dp_10_classroom"
                android:background="@color/BGPressedClassRoom"/>
            <!--scollview嵌套webview必须先给webview一个高度，然后根据加载完成后设置webviwe高度-->
            <com.xinwang.bgqbaselib.view.CustomWebView
                android:id="@+id/webview"
                android:layout_width="match_parent"
                android:focusable="false"
                android:visibility="invisible"
                android:focusableInTouchMode="false"
                android:layout_height="10dp"
                />
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/dp_1_classroom">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_15_classroom"
            android:layout_toLeftOf="@+id/tvAdd">
            <LinearLayout
                android:id="@+id/llSeek"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:tint="@color/textColorClassRoom"
                    android:src="@mipmap/ic_zx_shoppingcenter"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:textColor="@color/textColorClassRoom"
                    android:text="咨询"/>
            </LinearLayout>
            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <RelativeLayout
                android:id="@+id/llShopping"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginRight="@dimen/dp_15_classroom"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:id="@+id/ivShopping"
                    android:tint="@color/textColorClassRoom"
                    android:layout_centerHorizontal="true"
                    android:src="@mipmap/ic_gwc_shoppingcneter"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:layout_below="@+id/ivShopping"
                    android:textColor="@color/textColorClassRoom"
                    android:text="购物车"/>
                <include layout="@layout/layout_round_number_shoppingcenter"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_toRightOf="@+id/ivShopping"
                    android:layout_marginLeft="-2dp"/>
            </RelativeLayout>
            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
        </LinearLayout>
        <TextView
            android:layout_width="110dp"
            android:text="加入购物车"
            android:id="@+id/tvAdd"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/tvBuy"
            android:gravity="center"
            android:layout_height="35dp"
            android:textColor="@android:color/white"
            android:background="@drawable/shape_dialog_category_cancel_bg_shoppingcenter"
            />
        <TextView
            android:id="@+id/tvBuy"
            android:layout_width="110dp"
            android:text="立即购买"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_15_classroom"
            android:background="@drawable/shape_dialog_category_ok_bg_shoppingcenter"
            android:textColor="@android:color/white"
            android:layout_alignParentRight="true"
            android:layout_height="35dp"/>
    </RelativeLayout>
</LinearLayout>