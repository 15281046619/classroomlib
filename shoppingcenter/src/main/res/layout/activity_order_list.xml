<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/BGClassRoom"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.xinwang.bgqbaselib.view.CustomToolbar
        android:id="@+id/toolbar"
        style="@style/ToolbarStyleClassRoom"
        android:focusableInTouchMode="true"
        android:focusable="true"
        android:layout_alignParentTop="true"
        app:contentInsetStartWithNavigation="0dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginRight="@dimen/dp_15_classroom"
            android:id="@+id/rlSearch"
            android:layout_gravity="center"
            android:transitionName="shoppingSearch"
            android:background="@drawable/shape_search_bg_shoppingcenter"
            android:layout_height="@dimen/dp_35_classroom">
            <EditText
                android:layout_width="match_parent"
                android:id="@+id/etContent"
                android:layout_centerInParent="true"
                android:textSize="@dimen/sp_14_classroom"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp_15_classroom"
                android:paddingRight="@dimen/dp_35_classroom"
                android:background="@null"
                android:maxLines="1"
                android:layout_toLeftOf="@+id/ivDelete"
                android:singleLine="true"
                android:imeOptions="actionSearch"
                android:layout_height="match_parent"/>
            <ImageView
                android:layout_width="wrap_content"
                android:src="@drawable/ic_baseline_close_24_shoppingcenter"
                android:background="@drawable/shape_search_close_bg_shoppingcenter"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:id="@+id/ivDelete"
                android:visibility="invisible"
                android:padding="@dimen/dp_2_classroom"
                android:layout_marginRight="@dimen/dp_10_classroom"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
    </com.xinwang.bgqbaselib.view.CustomToolbar>
    <android.support.design.widget.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        app:tabIndicatorColor="@color/themeClassRoom"
        app:tabIndicatorHeight="2dp"
        app:tabSelectedTextColor="@color/themeClassRoom"
        app:tabMode="scrollable"
        app:tabTextColor="#fff"/>
    <android.support.v4.view.ViewPager
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/viewPager"/>
</LinearLayout>