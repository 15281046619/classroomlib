<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@color/BGClassRoom"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.xinwang.bgqbaselib.view.CustomToolbar
        android:id="@+id/toolbar"
        app:layout_collapseMode="pin"
        android:text="购物车"
        style="@style/ToolbarStyleClassRoom"
        >
        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:id="@+id/ivDelete"
            android:src="@drawable/ic_baseline_delete_outline_24_shoppingcenter"
            android:layout_gravity="right|center_vertical"
            android:layout_marginEnd="10dp"
            />
    </com.xinwang.bgqbaselib.view.CustomToolbar>
    <include
        layout="@layout/layout_empty_classroom"/>
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/recyclerView"
        android:paddingBottom="@dimen/dp_10_classroom"
        android:layout_weight="1"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@android:color/white"
        android:layout_marginTop="@dimen/dp_1_classroom"
        android:gravity="center_vertical">
        <CheckBox
            android:layout_width="wrap_content"
            android:id="@+id/rbCheck"
            android:layout_marginLeft="@dimen/dp_15_classroom"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:text="全选"/>
        <TextView
            android:id="@+id/tvSum"
            android:layout_toLeftOf="@+id/tvBuy"
            android:layout_marginRight="@dimen/dp_15_classroom"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tvBuy"
            android:layout_width="110dp"
            android:text="结算"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_15_classroom"
            android:background="@drawable/shape_count_bg_shoppingcenter"
            android:textColor="@android:color/white"
            android:layout_alignParentRight="true"
            android:layout_height="35dp"/>
    </RelativeLayout>

</LinearLayout>