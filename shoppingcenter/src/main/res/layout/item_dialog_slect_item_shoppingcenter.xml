<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minWidth="280dp"
    android:layout_marginBottom="@dimen/dp_10_classroom"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/tvItem1"
        android:layout_width="0dp"
        android:gravity="center"
        android:layout_weight="1"
        android:text="规格"
        android:textSize="@dimen/sp_12_classroom"
        android:paddingTop="8dp"
        android:background="@drawable/select_dialog_child_bg_shoppingcenter"
        android:textColor="@drawable/select_dialog_child_textcolor_shoppingcneter"
        android:paddingBottom="8dp"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tvItem2"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:textSize="@dimen/sp_12_classroom"
        android:layout_marginLeft="@dimen/dp_10_classroom"
        android:paddingTop="8dp"
        android:background="@drawable/select_dialog_child_bg_shoppingcenter"
        android:textColor="@drawable/select_dialog_child_textcolor_shoppingcneter"
            android:gravity="center"
        android:text="规格"
        android:paddingBottom="8dp"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tvItem3"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:textSize="@dimen/sp_12_classroom"
        android:background="@drawable/select_dialog_child_bg_shoppingcenter"
        android:textColor="@drawable/select_dialog_child_textcolor_shoppingcneter"
        android:paddingTop="8dp"
        android:text="规格"
        android:gravity="center"
        android:layout_marginLeft="@dimen/dp_10_classroom"
        android:paddingBottom="8dp"
        android:layout_height="wrap_content"/>
</LinearLayout>