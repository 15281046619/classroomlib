<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <android.support.v7.widget.CardView
        android:layout_width="90dp"
        android:id="@+id/cdCove"
        android:layout_toRightOf="@+id/rbCheck"
        android:layout_margin="@dimen/dp_10_classroom"
        app:cardCornerRadius="@dimen/dp_5_classroom"
        app:elevation="0dp"
        app:cardMaxElevation="0dp"
        android:layout_height="90dp">
        <ImageView
            android:id="@+id/icCove"
            android:layout_width="match_parent"
            android:scaleType="centerCrop"
            android:layout_height="match_parent"/>
    </android.support.v7.widget.CardView>
    <TextView
        android:layout_toRightOf="@+id/cdCove"
        android:layout_width="match_parent"
        android:id="@+id/tvTitle"
        android:layout_marginTop="@dimen/dp_10_classroom"
        android:layout_marginRight="@dimen/dp_10_classroom"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/cdCove"
        android:id="@+id/tvSku"
        android:textColor="@color/GrayClassRoom"
        android:textSize="@dimen/sp_12_classroom"
        android:layout_marginRight="@dimen/dp_10_classroom"
        android:background="@color/BGClassRoom"
        android:padding="@dimen/dp_5_classroom"
        android:layout_marginTop="@dimen/dp_10_classroom"
        android:layout_marginBottom="@dimen/dp_10_classroom"
        android:layout_below="@+id/tvTitle"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvPrice"
        android:textSize="18sp"
        android:maxLines="1"
        android:layout_toLeftOf="@+id/llSum"
        android:textColor="@color/themeClassRoom"
        android:layout_alignBottom="@+id/llSum"
        android:layout_alignTop="@+id/llSum"
        android:gravity="center_vertical"
        android:layout_toRightOf="@+id/cdCove"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_alignParentRight="true"
        android:orientation="horizontal"
        android:layout_below="@+id/tvSku"
        android:id="@+id/llSum"
        android:layout_marginBottom="@dimen/dp_10_classroom"
        android:layout_marginRight="@dimen/dp_10_classroom"
        android:background="@drawable/shape_shop_ceneter_item_bg_shoppingcenter"
        android:layout_height="30dp">
        <TextView
            android:layout_width="30dp"
            android:text="-"
            android:id="@+id/tvSub"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_height="match_parent"/>
        <View
            android:layout_width="@dimen/dp_1_classroom"
            android:layout_height="match_parent"
            android:background="@color/LineClassRoom"/>
        <TextView
            android:layout_width="55dp"
            android:gravity="center"
            android:id="@+id/tvSum"
            android:maxLength="5"
            android:layout_height="match_parent"/>
        <View
            android:layout_width="@dimen/dp_1_classroom"
            android:layout_height="match_parent"
            android:background="@color/LineClassRoom"/>
        <TextView
            android:layout_width="30dp"
            android:gravity="center"
            android:text="+"
            android:id="@+id/tvAdd"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_height="match_parent"/>
    </LinearLayout>

</RelativeLayout>