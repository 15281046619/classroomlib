<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:id="@+id/tvTime"
        android:text="2020-12-12 12:12"
        android:layout_marginLeft="40dp"
        android:textSize="14sp"
        android:lineSpacingExtra="0dp"

        android:includeFontPadding="false"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/tvTime"
        android:layout_marginTop="3dp"
        android:id="@+id/tvContent"
        android:textSize="13sp"
        android:layout_marginLeft="40dp"
        android:paddingBottom="15dp"
        android:text="快件已到达【四川成都中和公司】扫描员是【张龙】"
        />
    <LinearLayout
        android:layout_width="20dp"
        android:id="@+id/rlLine"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignBottom="@+id/tvContent"
        android:layout_marginLeft="10dp"
        android:orientation="vertical"
        android:layout_marginRight="10dp">
        <View
            android:layout_width="1dp"
            android:background="@color/LineClassRoom"
            android:layout_height="4dp"
            android:id="@+id/view1"
            android:layout_gravity="center_horizontal"
            />
        <View
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/shape_ciclre_bg_shoppingcenter"/>
        <View
            android:layout_width="1dp"
            android:background="@color/LineClassRoom"
            android:layout_height="0dp"
            android:id="@+id/view2"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            />
    </LinearLayout>
</RelativeLayout>