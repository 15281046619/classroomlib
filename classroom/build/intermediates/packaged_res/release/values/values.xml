<?xml version="1.0" encoding="utf-8"?>
<resources>
    <color name="BGClassRoom">#f2f2f2</color>
    <color name="BGPressedClassRoom">#DBD6D6</color>
    <color name="CurPositionClassRoom">#E4DCC0</color>
    <color name="GrayClassRoom">#999999</color>
    <color name="LineClassRoom">#E0DEDE</color>
    <color name="SwipeRefreshLayoutClassRoom">#FFC400</color>
    <color name="backgroundClassRoom">#eeeeee</color>
    <color name="colorAccentClassRoom">#D81B60</color>
    <color name="colorPrimaryClassRoom">#008577</color>
    <color name="colorPrimaryDarkClassRoom">#00574B</color>
    <color name="textColor1ClassRoom">#3A3A3A</color>
    <color name="textColorClassRoom">#282828</color>
    <color name="themeClassRoom">#0058bd</color>
    <color name="toolbarBgClassRoom">#222132</color>
    <color name="yellowClassRoom">#FFFF00</color>
    <dimen name="dp_100_classroom">100dp</dimen>
    <dimen name="dp_10_classroom">10dp</dimen>
    <dimen name="dp_120_classroom">120dp</dimen>
    <dimen name="dp_15_classroom">15dp</dimen>
    <dimen name="dp_1_classroom">1dp</dimen>
    <dimen name="dp_200_classroom">200dp</dimen>
    <dimen name="dp_250_classroom">250dp</dimen>
    <dimen name="dp_300_classroom">300dp</dimen>
    <dimen name="dp_5_classroom">5dp</dimen>
    <dimen name="dp_80_classroom">80dp</dimen>
    <dimen name="dp_93_classroom">93dp</dimen>
    <dimen name="sp_14_classroom">14sp</dimen>
    <dimen name="sp_15_classroom">15sp</dimen>
    <dimen name="sp_16_classroom">16sp</dimen>
    <string name="app_name_ClassRoom">classroom</string>
    <string name="class_room_home_title_ClassRoom">养殖课堂</string>
    <style name="AppThemeClassRoom" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryClassRoom</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkClassRoom</item>
        <item name="colorAccent">@color/colorAccentClassRoom</item>
        <item name="android:textColor">@color/textColorClassRoom</item>
        <item name="android:textSize">@dimen/sp_15_classroom</item>


        <!--禁止多点触控-->
        <item name="android:windowEnableSplitTouch">false</item>
        <item name="android:splitMotionEvents">false</item>
    </style>
    <style name="DialogStyleClassRoom" parent="Theme.AppCompat.Light.Dialog">
        <!-- 窗口背景色 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--是否有覆盖-->
        <item name="android:windowContentOverlay">@null</item>
        <!-- 浮于Activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- Dialog以外的区域模糊效果 -->
        <item name="android:backgroundDimEnabled">false</item>
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 半透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <!--进出动画-->
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <!--全屏-->
        <item name="android:windowFullscreen">false</item>
    </style>
    <style name="ToolbarStyleClassRoom">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">?actionBarSize</item>
        <item name="navigationIcon">@mipmap/ic_back_classroom</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@color/toolbarBgClassRoom</item>
        <item name="android:textSize">@dimen/sp_16_classroom</item>
        <item name="titleMargin">0dp</item>
        <item name="contentInsetLeft">0dp</item>
        <item name="contentInsetStart">0dp</item>
    </style>
    <style name="chatAvatarClassRoom" parent="Theme.AppCompat.Light">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:src">@drawable/empty_drawable</item>
    </style>
    <declare-styleable name="classroom_CustomToolbar">
        <attr format="string" name="android:text"/>
        <attr format="color" name="android:textColor"/>
        <attr format="dimension" name="android:textSize"/>
        <attr format="color" name="divColor"/>
        <attr format="boolean" name="fitWindow"/>
    </declare-styleable>
</resources>