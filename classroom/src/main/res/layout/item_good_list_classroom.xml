<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cbRoot"
    android:layout_marginLeft="@dimen/dp_10_classroom"
    android:layout_marginRight="@dimen/dp_10_classroom"
    android:layout_marginTop="@dimen/dp_10_classroom"
    app:cardCornerRadius="@dimen/dp_5_classroom"
    app:cardBackgroundColor="@android:color/white"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardUseCompatPadding="true"
    app:cardMaxElevation="0dp"
    app:elevation="0dp"
    app:cardPreventCornerOverlap="false"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp">
        <android.support.v7.widget.CardView
            android:layout_width="90dp"
            android:id="@+id/cdCove"
            android:layout_marginTop="@dimen/dp_5_classroom"
            android:layout_marginBottom="@dimen/dp_5_classroom"
            android:layout_marginRight="@dimen/dp_10_classroom"
            app:cardCornerRadius="@dimen/dp_5_classroom"
            app:elevation="0dp"
            app:cardMaxElevation="0dp"
            android:layout_height="90dp">
            <com.xingwang.classroom.view.ImageWidthHeightView
                android:id="@+id/img_good_cover"
                android:layout_width="match_parent"
                android:scaleType="centerCrop"
                android:layout_height="match_parent"/>
        </android.support.v7.widget.CardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/cdCove"
            android:layout_alignBottom="@+id/cdCove"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/dp_10_classroom"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_good_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right|bottom"
                android:layout_marginTop="10dp"

                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_good_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ï¿¥20"
                    android:layout_marginLeft="@dimen/dp_10_classroom"
                    android:textColor="@color/themeClassRoom"
                    android:textSize="18sp"
                    />
            </LinearLayout>




        </LinearLayout>


    </RelativeLayout>
</android.support.v7.widget.CardView>