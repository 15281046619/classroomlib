<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clickable="true"
    android:layout_marginLeft="@dimen/dp_10_classroom"
    android:layout_marginRight="@dimen/dp_10_classroom"
    android:layout_marginTop="@dimen/dp_5_classroom"
    android:padding="@dimen/dp_5_classroom"
    android:background="@android:color/white"
    android:layout_height="@dimen/dp_100_classroom">
    <LinearLayout
        android:id="@+id/line_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <com.xingwang.classroom.view.ImageWidthHeightView
            android:id="@+id/img_good_cover"
            android:layout_width="0dp"
            android:scaleType="centerCrop"
            android:layout_weight="1"
            app:widthToHeightSum="0.8"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_10_classroom"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_good_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="商品"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_14_classroom"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/tv_good_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥20"
                    android:layout_marginLeft="@dimen/dp_10_classroom"
                    android:textColor="@color/reslib_colorHrefPress"
                    android:textSize="@dimen/sp_14_classroom"
                    />
            </LinearLayout>


            <TextView
                android:id="@+id/tv_good_des"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="这是商品介绍这是商品介绍"
                android:textSize="@dimen/sp_14_classroom"
                android:maxLines="2"
                android:layout_marginTop="@dimen/dp_5_classroom"
                android:ellipsize="end"/>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>