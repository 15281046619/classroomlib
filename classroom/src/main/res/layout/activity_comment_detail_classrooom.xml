<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/BGClassRoom"
    android:layout_height="match_parent">
    <com.xingwang.classroom.view.CustomToolbar
        android:id="@+id/toolbar"
        style="@style/ToolbarStyleClassRoom"
        android:text="回复详情"

        />
    <include layout="@layout/layout_empty_classroom"
        android:layout_below="@+id/ll_title"
        android:layout_height="match_parent"
        android:layout_width="match_parent"/>
    <com.xingwang.classroom.view.VpSwipeRefreshLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/swipe_refresh_layout"
        >
        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="5dp"
            android:layout_below="@+id/tv_title"
            android:id="@+id/recycler_view"/>
    </com.xingwang.classroom.view.VpSwipeRefreshLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@android:color/white"
        android:layout_alignParentBottom="true"
        android:id="@+id/rl_bottom"
        android:layout_height="45dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/rl_right"
            android:paddingLeft="@dimen/dp_10_classroom"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:maxLength="256"
            android:id="@+id/et_content"
            android:hint="请输入你想说的话"
            android:inputType="text"
            android:background="@null"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:id="@+id/rl_right"
            android:layout_alignParentRight="true"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="发送"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:paddingLeft="@dimen/dp_10_classroom"
                android:paddingRight="@dimen/dp_10_classroom"
                android:id="@+id/bt_send"
                android:layout_marginRight="@dimen/dp_10_classroom"
                android:layout_marginLeft="@dimen/dp_10_classroom"
                android:layout_centerVertical="true"
                android:textColor="@android:color/white"
                android:visibility="gone"
                android:background="@drawable/shape_button_classroom"
                />
            <ImageView
                android:layout_width="45dp"
                android:layout_height="35dp"
                android:id="@+id/iv_pic"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"

                android:paddingBottom="5dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/ic_tp_classroom"/>

        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>