<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#faffffff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
      >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:textColor="@color/black"
            android:layout_marginLeft="@dimen/dp_10_classroom"
            android:drawableLeft="@mipmap/ic_jf_classroom"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/sp_16_classroom"
            android:drawablePadding="@dimen/dp_5_classroom"
            android:gravity="center_vertical"
            android:text="积分："/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:textSize="@dimen/sp_16_classroom"
            android:textStyle="bold"
            android:id="@+id/tvJF"
            android:textColor="@color/red"
            android:text="23"/>
        <ImageView
            android:layout_width="40dp"
            android:id="@+id/ivClose"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_10_classroom"
            android:src="@mipmap/ic_gb_classroom"/>
    </LinearLayout>
    <GridView
        android:id="@+id/gradView"
        android:layout_width="match_parent"
        android:numColumns="4"
        android:verticalSpacing="10dp"
        android:layout_marginTop="10dp"
        android:paddingLeft="@dimen/dp_10_classroom"
        android:paddingRight="@dimen/dp_10_classroom"
        android:horizontalSpacing="10dp"
        android:layout_height="wrap_content">
        
    </GridView>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:id="@+id/rl_right"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="赠送"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:paddingLeft="@dimen/dp_10_classroom"
            android:paddingRight="@dimen/dp_10_classroom"
            android:id="@+id/bt_send"
            android:layout_margin="@dimen/dp_10_classroom"
            android:layout_centerVertical="true"
            android:textColor="@android:color/white"
            android:layout_alignParentRight="true"
            android:background="@drawable/shape_button_classroom"
            />
    </RelativeLayout>
</LinearLayout>