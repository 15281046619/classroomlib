<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:background="@drawable/red_pack_top_bg_classroom"
    android:animateLayoutChanges="true"
    android:layout_height="497dp">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_marginTop="140dp"
        android:layout_height="wrap_content"
        android:id="@+id/rlHead"
        android:layout_centerHorizontal="true">
        <com.xingwang.classroom.view.CircularImage
            android:layout_width="20dp"
            android:id="@+id/ivHead"
            android:layout_height="20dp"
          />

        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/ivHead"
            android:text="直播间的红包"
            android:textColor="#fec199"
            android:textStyle="bold" />
    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/rlHead"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#fec199"
        android:text="恭喜发财，大吉大利"
        android:layout_height="wrap_content"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:id="@+id/rlOpen"
        android:layout_height="@dimen/dp_100_classroom">

        <View
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:id="@+id/view_top"
            android:background="#f45e4d"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@+id/view_top"
            android:id="@+id/view_center"
            android:background="@mipmap/ic_round_bg_classromm"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="#f55545"
            android:layout_below="@+id/view_center"/>
        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/ivThumb"
            android:layout_centerInParent="true"
            android:background="@mipmap/ic_pack_open_classroom"
            />
    </RelativeLayout>
    <View
        android:id="@+id/viewBottom"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/red_pack_bottom_bg_classroom"
        android:layout_alignParentBottom="true"/>
    <TextView
        android:id="@+id/tvDes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="该红包版权由成都兴旺动物药业有限公司提供"
        android:textColor="#fec199"
        android:textStyle="bold"
        android:layout_marginBottom="20dp"
        android:textSize="@dimen/sp_12_classroom"/>
    <TextView
        android:layout_width="wrap_content"

        android:textStyle="bold"
        android:id="@+id/tvCenter"
        android:textSize="@dimen/sp_16_classroom"
        android:visibility="gone"
        android:layout_centerInParent="true"
        android:textColor="#fec199"
        android:layout_height="wrap_content"/>
    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@mipmap/ic_gb_classroom"
        android:padding="10dp"
        android:id="@+id/ivClose"
        android:layout_alignParentRight="true"
        android:tint="#fec199"/>
</RelativeLayout>
