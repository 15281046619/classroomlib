<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:clipChildren="false"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:background="@drawable/shape_gift_view_bg"
        android:layout_marginLeft="@dimen/dp_10_classroom"
        android:layout_marginRight="@dimen/dp_10_classroom"
        android:id="@+id/rlRoot1"
        android:clipChildren="false"
        android:visibility="invisible"
        android:layout_height="60dp">
        <com.xingwang.classroom.view.CircularImage
            android:layout_width="40dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:src="@mipmap/ic_kssj_classroom"
            android:id="@+id/ivHead1"
            android:layout_height="40dp"/>
        <LinearLayout
            android:layout_width="100dp"
            android:layout_toRightOf="@+id/ivHead1"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:id="@+id/llContent1"
            android:layout_centerVertical="true"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:text="间隙"
                android:id="@+id/tvName1"
                android:singleLine="true"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:gravity="center_vertical"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                />
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/tvGiftName1"
                android:text="送出一个小心"
                android:layout_marginTop="2dp"
                android:textSize="12sp"
                android:includeFontPadding="false"
                android:textColor="@android:color/white"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <ImageView
            android:layout_width="40dp"
            android:scaleType="centerCrop"
            android:layout_toRightOf="@+id/llContent1"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:id="@+id/ivGiftImg1"

            android:layout_height="40dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_toRightOf="@+id/ivGiftImg1"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:id="@+id/llSum1"
            android:clipChildren="false"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:text="X"
                android:textColor="@android:color/white"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="35dp"
                android:textSize="24sp"
                android:text="10"
                android:id="@+id/tvSum1"
                android:textColor="@android:color/white"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:background="@drawable/shape_gift_view_bg"
        android:layout_marginLeft="@dimen/dp_10_classroom"
        android:layout_marginRight="@dimen/dp_10_classroom"
        android:layout_marginTop="20dp"
        android:id="@+id/rlRoot2"
        android:clipChildren="false"
        android:visibility="invisible"
        android:layout_height="60dp">
        <com.xingwang.classroom.view.CircularImage
            android:layout_width="40dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:src="@mipmap/ic_kssj_classroom"
            android:id="@+id/ivHead2"
            android:layout_height="40dp"/>
        <LinearLayout
            android:layout_width="100dp"
            android:layout_toRightOf="@+id/ivHead2"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:id="@+id/llContent2"
           android:layout_centerVertical="true"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:text="小军"
                android:id="@+id/tvName2"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:gravity="center_vertical"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
             />
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/tvGiftName2"
                android:text="送出一个小心"
                android:layout_marginTop="2dp"
                android:textSize="12sp"
                android:includeFontPadding="false"
                android:textColor="@android:color/white"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <ImageView
            android:layout_width="40dp"
            android:scaleType="centerCrop"
            android:layout_toRightOf="@+id/llContent2"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:id="@+id/ivGiftImg2"
            android:src="#0055BC"
            android:layout_height="40dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_toRightOf="@+id/ivGiftImg2"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:id="@+id/llSum2"
            android:clipChildren="false"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:text="X"
                android:textColor="@android:color/white"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="35dp"
                android:textSize="24sp"
                android:text="1"
                android:id="@+id/tvSum2"
                android:textColor="@android:color/white"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>