<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/drawable_marker_bg">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2012-12-12"
            android:id="@+id/tvTime"
            android:textColor="@android:color/white"
            android:paddingTop="@dimen/dp_5_classroom"
            android:textSize="10sp"
            android:gravity="center"
            android:paddingBottom="@dimen/dp_5_classroom"
            android:background="@drawable/shape_marker_view_title"/>

        <TextView
            android:id="@+id/tvprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingLeft="@dimen/dp_10_classroom"
            android:paddingTop="@dimen/dp_5_classroom"
            android:paddingRight="@dimen/dp_10_classroom"
            android:paddingBottom="@dimen/dp_5_classroom"
            android:text="价格：2020元/千克"
            android:textSize="10sp" />
    </LinearLayout>
