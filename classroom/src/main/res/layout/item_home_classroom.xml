<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dp_15_classroom"
    android:background="@android:color/white">
    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="@dimen/dp_93_classroom"
        android:layout_height="70dp"
        android:layout_marginRight="@dimen/dp_10_classroom"
        android:scaleType="centerCrop"

        android:background="@color/GrayClassRoom"/>
    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:textStyle="bold"
        android:textColor="@color/textColorClassRoom"
        android:textSize="@dimen/sp_16_classroom"
        android:layout_toRightOf="@+id/iv_icon"/>
    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@+id/iv_icon"
        android:layout_toRightOf="@+id/tv_num"/>
    <TextView
        android:id="@+id/tv_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_icon"
        android:layout_toRightOf="@+id/iv_icon"/>

    <TextView
        android:id="@+id/tvDes"
        android:layout_width="match_parent"
        android:layout_below="@+id/iv_icon"
        android:maxLines="3"
        android:textSize="@dimen/sp_13_classroom"
        android:lineSpacingExtra="@dimen/dp_5_classroom"
        android:layout_marginTop="@dimen/dp_10_classroom"
        android:layout_height="wrap_content"/>
</RelativeLayout>