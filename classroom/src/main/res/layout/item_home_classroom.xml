<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="@dimen/dp_100_classroom"
    android:padding="@dimen/dp_15_classroom"
    android:background="@android:color/white">
    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="@dimen/dp_93_classroom"
        android:layout_height="match_parent"
        android:layout_marginRight="@dimen/dp_10_classroom"
        android:scaleType="centerCrop"
        android:background="@color/GrayClassRoom"/>
    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:textColor="@color/textColorClassRoom"
        android:textSize="@dimen/sp_16_classroom"
        android:layout_toRightOf="@+id/iv_icon"/>
    <TextView
        android:id="@+id/tv_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/tv_num"/>
    <TextView
        android:id="@+id/tv_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/iv_icon"/>
</RelativeLayout>