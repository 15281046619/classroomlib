<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/BGClassRoom"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:background="@android:color/black"
        android:id="@+id/ll_title"
        android:minHeight="200dp"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/rlVideoRoot"
            android:layout_height="wrap_content">
            <com.xingwang.classroom.view.LandLayoutVideo
                android:id="@+id/video_track"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_200_classroom"
                android:visibility="gone"
                android:animateLayoutChanges="true"
                />

        </RelativeLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:id="@+id/flameLayout"
            android:visibility="gone"
            android:layout_height="360dp">

            <com.ycbjie.webviewlib.view.X5WebView
                android:id="@+id/webview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <include   layout="@layout/layout_video_title_classroom"/>
            <!--仿微信横向进度条-->
            <com.ycbjie.webviewlib.widget.WebProgress
                android:id="@+id/progress1"
                android:layout_width="match_parent"
                android:layout_height="3dp"/>
        </FrameLayout>

    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rl_head"
        android:layout_below="@+id/ll_title">
        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@color/BGClassRoom"
            android:id="@+id/rlContent"
            android:layout_above="@+id/rl_bottom"
            android:animateLayoutChanges="false"
            android:layout_height="match_parent"
            >
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/frame"
                android:animateLayoutChanges="false"
                />

            <com.xingwang.classroom.view.CustomBarrageLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/cbl_barrage"
                android:animateLayoutChanges="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true" />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@android:color/white"
            android:layout_alignParentBottom="true"
            android:id="@+id/rl_bottom"
            android:layout_height="45dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@+id/rl_right"
                android:paddingLeft="@dimen/dp_10_classroom"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:focusable="false"
                android:maxLength="256"
                android:id="@+id/et_content"
                android:hint="请输入你想说的话"
                android:inputType="text"
                android:background="@null"/>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:id="@+id/rl_right"
                android:layout_alignParentRight="true"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="发送"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:paddingLeft="@dimen/dp_10_classroom"
                    android:paddingRight="@dimen/dp_10_classroom"
                    android:id="@+id/bt_send"
                    android:layout_marginRight="@dimen/dp_10_classroom"
                    android:layout_marginLeft="@dimen/dp_10_classroom"
                    android:layout_centerVertical="true"
                    android:textColor="@android:color/white"
                    android:visibility="gone"
                    android:background="@drawable/shape_button_classroom"
                    />
                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="35dp"
                    android:id="@+id/iv_product"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="5dp"
                    android:visibility="gone"
                    android:paddingBottom="5dp"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/ic_shangpin_classroom"/>
                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="35dp"
                    android:id="@+id/iv_pic"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="5dp"
                    android:layout_toRightOf="@+id/iv_product"
                    android:paddingBottom="5dp"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/ic_tp_classroom"/>

                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="35dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/iv_pic"
                    android:id="@+id/iv_comment"
                    android:src="@mipmap/ic_pl_classroom"/>

            </RelativeLayout>
            <View
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginRight="5dp"
                android:id="@+id/view_dot"
                android:visibility="gone"
                android:layout_marginTop="5dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/shape_dot_read_classroom"/>
        </RelativeLayout>
        <include layout="@layout/layout_empty_classroom"

            android:layout_height="match_parent"
            android:layout_width="match_parent"/>
    </RelativeLayout>
</RelativeLayout>