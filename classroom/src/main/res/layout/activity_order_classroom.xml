<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.OrderActivity">

    <com.xingwang.classroom.view.CustomToolbar
        android:id="@+id/toolbar"
        style="@style/ToolbarStyleClassRoom"
        android:layout_alignParentTop="true"
        android:text="确认订单" />

    <LinearLayout
        android:id="@+id/line_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/reslib_colorWhiteTextOrIcons"
        android:paddingRight="@dimen/dp_15_classroom"
        android:paddingLeft="@dimen/dp_15_classroom"
        android:paddingTop="@dimen/dp_5_classroom"
        android:paddingBottom="@dimen/dp_5_classroom"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_buy_num"
            style="@style/OrderUserInfoTvClassRoom"
            android:text="共1件" />

        <Button
            android:id="@+id/btn_submit"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_35_classroom"
            android:text="提交订单"
            android:textSize="@dimen/sp_14_classroom"
            android:textColor="@color/reslib_colorWhiteTextOrIcons"
            android:background="@drawable/order_btn_bg_classroom"/>
    </LinearLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar"
        android:layout_above="@id/line_submit">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/dp_15_classroom">

            <!--买家信息-->
            <LinearLayout style="@style/OrderUserInfoPLineClassRoom">
                <!--姓名-->
                <LinearLayout style="@style/OrderUserInfoCLineClassRoom"
                    android:focusable="true"
                    android:focusableInTouchMode="true">

                    <TextView
                        style="@style/OrderUserInfoTvClassRoom"
                        android:text="姓名" />

                    <EditText
                        android:id="@+id/et_buyer_name"
                        style="@style/OrderUserInfEtClassRoom"
                        android:hint="请输入买家姓名" />
                </LinearLayout>

                <View
                    style="@style/viewLineClassRoom"
                    android:layout_marginTop="@dimen/dp_10_classroom"
                    android:layout_marginBottom="@dimen/dp_10_classroom" />

                <!--手机号码-->
                <LinearLayout style="@style/OrderUserInfoCLineClassRoom">

                    <TextView
                        style="@style/OrderUserInfoTvClassRoom"
                        android:text="手机号码" />

                    <EditText
                        android:id="@+id/et_buyer_tel"
                        style="@style/OrderUserInfEtClassRoom"
                        android:hint="请输入手机号码"
                        android:inputType="phone"
                        android:maxLength="12" />
                </LinearLayout>

                <View
                    style="@style/viewLineClassRoom"
                    android:layout_marginTop="@dimen/dp_10_classroom"
                    android:layout_marginBottom="@dimen/dp_10_classroom" />

                <!--省市区地址-->
                <LinearLayout style="@style/OrderUserInfoCLineClassRoom">

                    <TextView
                        style="@style/OrderUserInfoTvClassRoom"
                        android:text="地址" />

                    <EditText
                        android:id="@+id/et_city"
                        style="@style/OrderUserInfEtClassRoom"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:hint="所在区域" />
                </LinearLayout>

                <View
                    style="@style/viewLineClassRoom"
                    android:layout_marginTop="@dimen/dp_10_classroom"
                    android:layout_marginBottom="@dimen/dp_10_classroom" />

                <!--详细地址-->
                <LinearLayout style="@style/OrderUserInfoCLineClassRoom">

                    <TextView
                        style="@style/OrderUserInfoTvClassRoom"
                        android:text="详细地址" />

                    <EditText
                        android:id="@+id/et_adr"
                        style="@style/OrderUserInfEtClassRoom"
                        android:hint="请输入地址详情" />
                </LinearLayout>
            </LinearLayout>

            <!--商品信息-->
            <LinearLayout
                style="@style/OrderUserInfoPLineClassRoom"
                android:layout_marginTop="@dimen/dp_15_classroom">

                <LinearLayout
                    android:id="@+id/line_view"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <com.xingwang.classroom.view.ImageWidthHeightView
                        android:id="@+id/img_good_cover"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/ic_gb_classroom"
                        app:widthToHeightSum="1" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dp_10_classroom"
                        android:layout_weight="4"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_good_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="商品"
                                android:textColor="@color/black"
                                android:textSize="@dimen/sp_14_classroom"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_good_price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dp_10_classroom"
                                android:text="￥20"
                                android:textColor="@color/reslib_colorHrefPress"
                                android:textSize="@dimen/sp_14_classroom" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_good_des"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_5_classroom"
                            android:ellipsize="end"
                            android:maxLines="2"
                            android:text="这是商品介绍这是商品介绍"
                            android:textSize="@dimen/sp_14_classroom" />
                    </LinearLayout>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <cn.com.cesgroup.numpickerview.NumberPickerView
                        android:id="@+id/pick_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        app:buttonWidth="30dp"
                        app:editable="true"
                        app:editextWidth="40dp"
                        app:textColor="@android:color/black"
                        app:textSize="@dimen/sp_13_classroom" />
                </RelativeLayout>
            </LinearLayout>

            <!--买家留言-->
            <LinearLayout
                style="@style/OrderUserInfoPLineClassRoom"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/dp_15_classroom"
                android:gravity="center_vertical">
                <TextView
                    style="@style/OrderUserInfoTvClassRoom"
                    android:text="买家留言" />

                <EditText
                    android:id="@+id/et_buyer_msg"
                    style="@style/OrderUserInfEtClassRoom"
                    android:minHeight="@dimen/dp_30_classroom"
                    android:layout_height="wrap_content"
                    android:hint="留言建议提前协商(50字以内)"
                    android:maxLength="50"/>
            </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>


</RelativeLayout>