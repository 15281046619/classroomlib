<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clickable="true"
    android:layout_marginLeft="@dimen/dp_10_classroom"
    android:layout_marginRight="@dimen/dp_10_classroom"
    android:layout_marginTop="@dimen/dp_10_classroom"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="@dimen/dp_5_classroom"
    app:cardUseCompatPadding="true"
    android:background="@android:color/white"
    app:cardPreventCornerOverlap="false"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <com.xingwang.classroom.view.ImageWidthHeightView
            android:layout_width="match_parent"
            android:scaleType="centerCrop"
            android:id="@+id/ivThumb"
            app:widthToHeightSum="1.77"
            android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tvState"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_5_classroom"
                android:layout_marginTop="@dimen/dp_5_classroom"
                android:text="直播中"
                android:textStyle="bold"
                android:textSize="@dimen/sp_12_classroom"
                android:textColor="@android:color/white"
                android:padding="@dimen/dp_5_classroom"
                android:background="@drawable/shape_live_state_bg"
                />

        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:id="@+id/tvTitle"
            android:layout_marginTop="@dimen/dp_10_classroom"
            android:textSize="@dimen/sp_16_classroom"
            android:layout_marginLeft="@dimen/dp_5_classroom"
            android:layout_marginRight="@dimen/dp_5_classroom"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="match_parent"
            android:lineSpacingExtra="@dimen/dp_5_classroom"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_12_classroom"
            android:maxLines="3"
            android:textColor="@color/GrayClassRoom"
            android:layout_marginLeft="@dimen/dp_5_classroom"
            android:layout_marginRight="@dimen/dp_5_classroom"
            android:ellipsize="end"
            android:id="@+id/tvDes"
            android:layout_marginTop="@dimen/dp_10_classroom"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/dp_5_classroom"
            android:layout_marginRight="@dimen/dp_5_classroom"
            android:layout_marginTop="@dimen/dp_10_classroom"
            android:gravity="center_vertical"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="@dimen/dp_12_classroom"
                android:layout_height="@dimen/dp_12_classroom"
                android:src="@mipmap/ic_lll"
                android:layout_centerVertical="true"
                android:id="@+id/ivView"
                android:scaleType="fitXY"/>
            <TextView
                android:id="@+id/tvView"
                android:textSize="@dimen/sp_12_classroom"
                android:layout_width="wrap_content"
                android:textColor="@color/GrayClassRoom"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/ivView"
                android:layout_marginLeft="@dimen/dp_2_classroom"/>


            <ImageView
                android:layout_width="@dimen/dp_12_classroom"
                android:layout_height="@dimen/dp_12_classroom"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_2_classroom"
                android:layout_toLeftOf="@+id/tvComment"
                android:scaleType="fitXY"
                android:src="@mipmap/ic_plun" />
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/tvComment"
                android:layout_centerVertical="true"
                android:textSize="@dimen/sp_12_classroom"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:textColor="@color/GrayClassRoom"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/dp_5_classroom"
            android:layout_marginRight="@dimen/dp_5_classroom"
            android:layout_marginTop="@dimen/dp_10_classroom"
            android:layout_marginBottom="@dimen/dp_10_classroom"
            android:gravity="center_vertical"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="@dimen/dp_12_classroom"
                android:layout_height="@dimen/dp_12_classroom"
                android:src="@mipmap/ic_jjr"
                android:layout_centerVertical="true"
                android:id="@+id/ivName"
                android:scaleType="fitXY"/>
            <TextView
                android:id="@+id/tvName"
                android:textSize="@dimen/sp_12_classroom"
                android:layout_width="wrap_content"
                android:textColor="@color/GrayClassRoom"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:includeFontPadding="false"
                android:layout_toRightOf="@+id/ivName"
                android:layout_marginLeft="@dimen/dp_2_classroom"/>


            <ImageView
                android:layout_width="@dimen/dp_12_classroom"
                android:layout_height="@dimen/dp_12_classroom"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_2_classroom"
                android:layout_toLeftOf="@+id/tvTime"
                android:scaleType="fitXY"
                android:src="@mipmap/ic_kssj" />
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/tvTime"
                android:layout_centerVertical="true"
                android:textSize="@dimen/sp_12_classroom"
                android:includeFontPadding="false"
                android:layout_height="wrap_content"
                android:textColor="@color/GrayClassRoom"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>