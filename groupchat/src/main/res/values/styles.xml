<resources>

    <!-- 普通弹窗样式 -->
    <style name="groupchat_customDialogTheme" parent="@android:style/Theme.Holo.Light">
        <item name="android:windowFrame">@null</item><!-- 边框 -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item><!-- 外部变灰 -->
        <item name="android:windowContentOverlay">@null</item><!-- 内部阴影 -->
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <!--群头像，名称操作-->
    <style name="groupchat_edit_add_group" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/groupchat_progress_green</item>
        <item name="colorControlActivated">@color/groupchat_progress_green</item>
    </style>

    <!--全宽横线的分割线-->
    <style name="groupchat_line_View">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/groupchat_divider</item>
    </style>

    <!-- 弹窗顶部样式 -->
    <style name="groupchat_dialog_title_top" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/groupchat_dialog_top_bg</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:textColor">@color/groupchat__window_color</item>
    </style>

    <!-- 弹窗左下按钮样式 -->
    <style name="groupchat_btn_down_left" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:minHeight">0dp</item>
        <item name="android:background">@drawable/groupchat_dialog_button_down_left_bg</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@drawable/groupchat_button_green_gray_text</item>
    </style>
    <!-- 弹窗右下按钮样式 -->
    <style name="groupchat_btn_down_right" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:minHeight">0dp</item>
        <item name="android:background">@drawable/groupchat_dialog_button_down_right_bg</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@drawable/groupchat_button_green_gray_text</item>
    </style>

    <!-- 弹窗中心弹出的动画 -->
    <style name="groupchat_center_dialog_animation">
        <item name="android:windowEnterAnimation">@anim/groupchat_zoom_in</item>
        <item name="android:windowExitAnimation">@anim/groupchat_zoom_out</item>
    </style>

    <!--checkbox选中效果-->
    <style name="groupchat_checkbox_select">
        <item name="android:button">@drawable/groupchat_group_checkbox_style</item>
    </style>

    <!--空页面提示-->
    <style name="groupchat_tv_empty">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
        <item name="android:text">"暂无数据"</item>
        <item name="android:visibility">gone</item>
    </style>

    <!--群设置页面-->
    <style name="groupchat_groupset_rela">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/groupchat_dp_50</item>
        <item name="android:background">@color/groupchat_white</item>
        <item name="android:padding">@dimen/groupchat_dp_10</item>
    </style>

    <!--群设置页面栏目说明 -->
    <style name="groupchat_groupset_rela_tv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textColor">#353535</item>
        <item name="android:textSize">@dimen/groupchat_sp_16</item>
        <item name="android:typeface">serif</item>
    </style>

    <!--群设置页面next导航-->
    <style name="groupchat_groupset_rela_img">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginRight">@dimen/groupchat_dp_10</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:src">@drawable/groupchat_icon_next</item>
    </style>
</resources>
