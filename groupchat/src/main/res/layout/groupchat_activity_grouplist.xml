<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/groupchat_background"
    tools:context=".GroupListActivity">

    <com.xingwang.swip.title.TopTitleView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title_text="群列表"
        app:is_show_right_second="false"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ListView
            android:id="@+id/list_group"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fadeScrollbars="false"
            android:background="@color/groupchat_white"
            android:divider="@color/groupchat_divider"
            android:dividerHeight="1dp"
            android:listSelector="@drawable/groupchat_list_item_click"
            android:scrollbars="horizontal" />
        <TextView
            android:id="@+id/tv_empty"
            style="@style/groupchat_tv_empty" />
    </FrameLayout>

</LinearLayout>